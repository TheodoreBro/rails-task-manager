<h1>Tasks</h1>

<% @tasks.each do |task|%>
<ul>
  <li>
    <% if task.completed %>
    <i class="far fa-check-square"></i>
    <% else %>
    <i class="far fa-square"></i>
    <% end %>
    <%= link_to "#{task.title}", "tasks/#{task.id}" %>
    <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, task_path(task),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
  </li>
</ul>
<% end %>

<%= link_to "create a new task","tasks/new" %>

